# http://editorconfig.org

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{css,html,js,json,sh}]
indent_style = tab

[*.{md,py,rst,txt}]
indent_size = 4
indent_style = space

[*.yml]
indent_size = 2
indent_style = space

[{bower_components,node_modules,var}/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_size = unset
indent_style = unset
